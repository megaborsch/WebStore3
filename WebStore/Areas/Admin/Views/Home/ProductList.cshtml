@model WebStore.DomainNew.Dto.Product.PagedProductDto

@{
    ViewData["Title"] = "Список продуктов";
}

<p>
    <a asp-action="Edit">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.Id)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Section)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.FirstOrDefault().ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.FirstOrDefault().Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Products) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Section.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brand.Name)
        </td>
        <td>
            <img src="~/template/images/shop/@item.ImageUrl" width="50px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>

            <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
            <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-cut"></i></a>
        </td>
    </tr>
}
    </tbody>
</table>
